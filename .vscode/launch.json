{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit testing",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/app.py",
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python FastAPI testing",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ]
        },
        {
            "name": "Testing API",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "api/test"
            ]
        }
    ]
}